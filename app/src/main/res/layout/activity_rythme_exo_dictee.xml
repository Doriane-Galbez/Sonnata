<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".RythmeExoDictee">

    <LinearLayout
        android:id="@+id/linearLayout4"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="5dp"
        android:orientation="horizontal"
        app:layout_constraintTop_toTopOf="parent"
        tools:layout_editor_absoluteX="5dp">

        <Button
            android:id="@+id/buttonRetour"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Retour" />

        <TextView
            android:id="@+id/textViewScore"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginRight="5dp"
            android:gravity="end"
            android:text="Score" />

    </LinearLayout>

    <Button
        android:id="@+id/buttonReplay"
        android:layout_width="153dp"
        android:layout_height="110dp"
        android:layout_marginTop="8dp"
        android:text="Rejouer la \nsequence"
        app:layout_constraintBottom_toTopOf="@+id/linearLayout2"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@+id/linearLayout4" />


    <ScrollView
        android:id="@+id/linearLayout2"
        android:layout_width="match_parent"
        android:layout_height="315dp"
        android:layout_marginBottom="32dp"
        app:layout_constraintBottom_toBottomOf="parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">


                <ImageButton
                    android:id="@+id/imageButtonRonde"
                    android:layout_width="85dp"
                    android:layout_height="66dp"
                    android:layout_weight="1"
                    android:scaleType="fitCenter"
                    app:srcCompat="@drawable/figure_rythmique_ronde" />


                <ImageButton
                    android:id="@+id/imageButtonBlanche"
                    android:layout_width="85dp"
                    android:layout_height="66dp"
                    android:layout_weight="1"
                    android:scaleType="fitCenter"
                    app:srcCompat="@drawable/figure_rythmique_blanche" />

                <ImageButton
                    android:id="@+id/imageButtonNoire"
                    android:layout_width="85dp"
                    android:layout_height="66dp"
                    android:layout_weight="1"
                    android:scaleType="fitCenter"
                    app:srcCompat="@drawable/figure_rythmique_noire" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <ImageButton
                    android:id="@+id/imageButton2Croches"
                    android:layout_width="85dp"
                    android:layout_height="66dp"
                    android:layout_weight="1"
                    android:scaleType="fitCenter"
                    app:srcCompat="@drawable/figure_rythmique_deux_croches" />

                <ImageButton
                    android:id="@+id/imageButton4DoublesCroches"
                    android:layout_width="85dp"
                    android:layout_height="66dp"
                    android:layout_weight="1"
                    android:scaleType="fitCenter"
                    app:srcCompat="@drawable/figure_rythmique_quatre_double_croches" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <ImageButton
                    android:id="@+id/imageButtonNoirePoint"
                    android:layout_width="85dp"
                    android:layout_height="66dp"
                    android:layout_weight="1"
                    android:scaleType="fitCenter"
                    app:srcCompat="@drawable/figure_rythmique_noire_pointee_croche" />

                <ImageButton
                    android:id="@+id/imageButtonTriolet"
                    android:layout_width="85dp"
                    android:layout_height="66dp"
                    android:layout_weight="1"
                    android:scaleType="fitCenter"
                    app:srcCompat="@drawable/figure_rythmique_triolet" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <ImageButton
                    android:id="@+id/imageButtonCrochePoint"
                    android:layout_width="85dp"
                    android:layout_height="66dp"
                    android:layout_weight="1"
                    android:scaleType="fitCenter"
                    app:srcCompat="@drawable/figure_rythmique_croche_pointee_double" />

                <ImageButton
                    android:id="@+id/imageButtonDoubleCrochePoint"
                    android:layout_width="85dp"
                    android:layout_height="66dp"
                    android:layout_weight="1"
                    android:scaleType="fitCenter"
                    app:srcCompat="@drawable/figure_rythmique_double_croche_pointee" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <ImageButton
                    android:id="@+id/imageButtonCroche2doubles"
                    android:layout_width="85dp"
                    android:layout_height="66dp"
                    android:layout_weight="1"
                    android:scaleType="fitCenter"
                    app:srcCompat="@drawable/figure_rythmique_croche_deux_doubles" />

                <ImageButton
                    android:id="@+id/imageButton2doublesCroche"
                    android:layout_width="85dp"
                    android:layout_height="66dp"
                    android:layout_weight="1"
                    android:scaleType="fitCenter"
                    app:srcCompat="@drawable/figure_rythmique_deux_doubles_croche" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <ImageButton
                    android:id="@+id/imageButtonSyncope"
                    android:layout_width="85dp"
                    android:layout_height="66dp"
                    android:layout_weight="1"
                    android:scaleType="fitCenter"
                    app:srcCompat="@drawable/figure_rythmique_syncope" />

                <ImageButton
                    android:id="@+id/imageButtonSyncopette"
                    android:layout_width="85dp"
                    android:layout_height="66dp"
                    android:layout_weight="1"
                    android:scaleType="fitCenter"
                    app:srcCompat="@drawable/figure_rythmique_syncopette" />

            </LinearLayout>
        </LinearLayout>

    </ScrollView>

    <TextView
        android:id="@+id/textViewNumSeq"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="5dp"
        android:text="Séquence n°1"
        app:layout_constraintBottom_toTopOf="@+id/buttonReplay"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent" />



</androidx.constraintlayout.widget.ConstraintLayout>