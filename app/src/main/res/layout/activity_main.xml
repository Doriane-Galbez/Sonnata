<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">


    <ImageView
        android:id="@+id/imageViewInfo"
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:layout_marginTop="8dp"
        android:layout_marginEnd="8dp"
        android:layout_marginRight="8dp"
        android:clickable="true"
        android:src="@drawable/icon_info2"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageView
        android:id="@+id/imageViewPlus"
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:layout_marginTop="8dp"
        android:layout_marginEnd="8dp"
        android:layout_marginRight="8dp"
        android:clickable="true"
        android:src="@drawable/icon_plus"
        app:layout_constraintEnd_toStartOf="@+id/imageViewInfo"
        app:layout_constraintTop_toTopOf="parent" />

    <LinearLayout
        android:id="@+id/linearLayoutMainActi"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_margin="5dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <Button
            android:id="@+id/bouton1"
            android:layout_width="fill_parent"
            android:layout_height="72dp"
            android:text="Lecture de notes" />

        <Button
            android:id="@+id/bouton2"
            android:layout_width="fill_parent"
            android:layout_height="72dp"
            android:layout_marginTop="10dp"
            android:text="DictÃ©e de notes" />

        <ImageView
            android:id="@+id/imageViewLogo"
            android:layout_width="299dp"
            android:layout_height="198dp"
            android:layout_gravity="center"
            android:src="@drawable/logo_sonnata_v2_sans_fond" />

        <Button
            android:id="@+id/bouton3"
            android:layout_width="fill_parent"
            android:layout_height="72dp"
            android:text="Rythme" />

        <Button
            android:id="@+id/bouton4"
            android:layout_width="fill_parent"
            android:layout_height="72dp"
            android:layout_marginTop="10dp"
            android:text="A vous de jouer !" />

    </LinearLayout>


</androidx.constraintlayout.widget.ConstraintLayout>