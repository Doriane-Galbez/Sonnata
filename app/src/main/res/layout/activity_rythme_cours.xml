<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".rythmeCours">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="10dp"
        app:layout_constraintTop_toTopOf="parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <TextView
                android:id="@+id/textViewIntro"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/texteRythmeIntro" />

            <TextView
                android:id="@+id/textViewBinaire"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:text="@string/texteRythmeBinaire" />

            <ImageView
                android:id="@+id/imageView10"
                android:layout_width="match_parent"
                android:layout_height="225dp"
                android:layout_gravity="center"
                android:layout_marginLeft="5dp"
                android:layout_marginRight="5dp"
                app:srcCompat="@drawable/arbre_subdivisions_rythmes_binaire" />


            <TextView
                android:id="@+id/textViewTernaire"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:text="@string/texteRythmeTernaire"/>

            <ImageView
                android:id="@+id/imageView12"
                android:layout_width="match_parent"
                android:layout_height="225dp"
                android:layout_gravity="center"
                android:layout_marginLeft="5dp"
                android:layout_marginRight="5dp"
                app:srcCompat="@drawable/arbre_subdivisions_rythmes_ternaire"/>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/textView8"
                    android:layout_width="128dp"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="15dp"
                    android:text="@string/texteRythmeCroches" />

                <ImageView
                    android:id="@+id/imageView11"
                    android:layout_width="match_parent"
                    android:layout_height="200dp"
                    android:layout_gravity="center"
                    android:layout_marginLeft="5dp"
                    android:layout_marginRight="5dp"
                    app:srcCompat="@drawable/arbre_subdivisions_rythmes_croches" />
            </LinearLayout>

            <TextView
                android:id="@+id/textView10"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/texteRythmePoints" />

            <ImageView
                android:id="@+id/imageView13"
                android:layout_width="wrap_content"
                android:layout_height="72dp"
                android:layout_gravity="center"
                android:layout_marginLeft="5dp"
                android:layout_marginRight="5dp"
                app:srcCompat="@drawable/notes_pointees_equivalences" />

            <TextView
                android:id="@+id/textViewEcoutez"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:text="@string/texteRythmeEcoutez" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:orientation="horizontal">

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:orientation="vertical">

                    <TextView
                        android:id="@+id/textViewLARonde"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:gravity="center"
                        android:text="LA ronde" />

                    <ImageButton
                        android:id="@+id/imageButtonLARonde"
                        android:layout_width="match_parent"
                        android:layout_height="105dp"
                        android:scaleType="fitCenter"
                        app:srcCompat="@drawable/la_ronde" />
                </LinearLayout>
                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:orientation="vertical">

                    <TextView
                        android:id="@+id/textViewLABlanche"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:gravity="center"
                        android:text="LA blanche" />

                    <ImageButton
                        android:id="@+id/imageButtonLABlanche"
                        android:layout_width="match_parent"
                        android:layout_height="105dp"
                        android:scaleType="fitCenter"
                        app:srcCompat="@drawable/la_blanche" />
                </LinearLayout>
                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:orientation="vertical">

                    <TextView
                        android:id="@+id/textViewLANoire"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:gravity="center"
                        android:text="LA noire" />

                    <ImageButton
                        android:id="@+id/imageButtonLANoire"
                        android:layout_width="match_parent"
                        android:layout_height="105dp"
                        android:scaleType="fitCenter"
                        app:srcCompat="@drawable/la_noire" />
                </LinearLayout>
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="bottom"
                    android:layout_weight="1"
                    android:orientation="vertical">

                    <TextView
                        android:id="@+id/textViewLA2croches"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:gravity="center"
                        android:text="LA deux croches" />

                    <ImageButton
                        android:id="@+id/imageButtonLA2croches"
                        android:layout_width="match_parent"
                        android:layout_height="105dp"
                        android:scaleType="fitCenter"
                        app:srcCompat="@drawable/la_deux_croches" />
                </LinearLayout>
                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:orientation="vertical">

                    <TextView
                        android:id="@+id/textViewLA4doubles"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:gravity="center"
                        android:text="LA quatre doubles croches" />

                    <ImageButton
                        android:id="@+id/imageButtonLA4doubles"
                        android:layout_width="match_parent"
                        android:layout_height="105dp"
                        android:scaleType="fitCenter"
                        app:srcCompat="@drawable/la_quatre_doubles" />
                </LinearLayout>
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:orientation="vertical">

                    <TextView
                        android:id="@+id/textViewLANoirePoint"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:gravity="center"
                        android:text="LA noire pointée croche" />

                    <ImageButton
                        android:id="@+id/imageButtonLANoirePoint"
                        android:layout_width="match_parent"
                        android:layout_height="105dp"
                        android:scaleType="fitCenter"
                        app:srcCompat="@drawable/la_noire_pointee_croche" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="bottom"
                    android:layout_weight="1"
                    android:orientation="vertical">

                    <TextView
                        android:id="@+id/textViewLATriolet"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:gravity="center"
                        android:text="LA triolet" />

                    <ImageButton
                        android:id="@+id/imageButtonLATriolet"
                        android:layout_width="match_parent"
                        android:layout_height="105dp"
                        android:scaleType="fitCenter"
                        app:srcCompat="@drawable/la_triolet" />
                </LinearLayout>
            </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="bottom"
                android:layout_weight="1"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/textViewLACrochePoint"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:text="LA croche pointée double" />

                <ImageButton
                    android:id="@+id/imageButtonLACrochePoint"
                    android:layout_width="match_parent"
                    android:layout_height="105dp"
                    android:scaleType="fitCenter"
                    app:srcCompat="@drawable/la_croche_pointee_double" />
            </LinearLayout>
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/textViewLADoubleCrochePoint"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:text="LA double chroche pointée" />

                <ImageButton
                    android:id="@+id/imageButtonLADoubleCrochePoint"
                    android:layout_width="match_parent"
                    android:layout_height="105dp"
                    android:scaleType="fitCenter"
                    app:srcCompat="@drawable/la_double_croche_pointee" />
            </LinearLayout>
        </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="bottom"
                    android:layout_weight="1"
                    android:orientation="vertical">

                    <TextView
                        android:id="@+id/textViewLACroche2doubles"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:gravity="center"
                        android:text="LA croche deux doubles" />

                    <ImageButton
                        android:id="@+id/imageButtonLACroche2doubles"
                        android:layout_width="match_parent"
                        android:layout_height="105dp"
                        android:scaleType="fitCenter"
                        app:srcCompat="@drawable/la_croche_deux_doubles" />
                </LinearLayout>
                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:orientation="vertical">

                    <TextView
                        android:id="@+id/textViewLA2doublesCroche"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:gravity="center"
                        android:text="LA deux doubles chroche" />

                    <ImageButton
                        android:id="@+id/imageButtonLA2doubleCroche"
                        android:layout_width="match_parent"
                        android:layout_height="105dp"
                        android:scaleType="fitCenter"
                        app:srcCompat="@drawable/la_deux_doubles_croche" />
                </LinearLayout>
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="bottom"
                    android:layout_weight="1"
                    android:orientation="vertical">

                    <TextView
                        android:id="@+id/textViewLASyncope"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:gravity="center"
                        android:text="LA syncope" />

                    <ImageButton
                        android:id="@+id/imageButtonLASyncope"
                        android:layout_width="match_parent"
                        android:layout_height="105dp"
                        android:scaleType="fitCenter"
                        app:srcCompat="@drawable/la_syncope" />
                </LinearLayout>
                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:orientation="vertical">

                    <TextView
                        android:id="@+id/textViewLASyncopette"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:gravity="center"
                        android:text="LA syncopette" />

                    <ImageButton
                        android:id="@+id/imageButtonLASyncopette"
                        android:layout_width="match_parent"
                        android:layout_height="105dp"
                        android:scaleType="fitCenter"
                        app:srcCompat="@drawable/la_syncopette" />
                </LinearLayout>
            </LinearLayout>

            <Button
                android:id="@+id/buttonRetour"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginTop="5dp"
                android:layout_marginBottom="10dp"
                android:text="Retour"/>


        </LinearLayout>
    </ScrollView>



</androidx.constraintlayout.widget.ConstraintLayout>